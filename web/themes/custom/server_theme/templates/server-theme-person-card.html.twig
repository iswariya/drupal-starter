<div class="rounded-lg border border-gray-300 w-full overflow-hidden">
  <div class="flex flex-col items-start justify-center bg-white shadow rounded-lg">
    <div class="flex flex-col space-y-6 items-center justify-start w-full p-8">
      <figure class="w-32 h-32 rounded-lg">
        {{ image }}
      </figure>
      <div class="flex flex-col space-y-1 items-center justify-center w-full">
        <p class="w-full text-sm font-medium leading-tight text-center text-gray-900">
          {{name}}
        </p>
        <div class="flex flex-col space-y-3 items-center justify-start w-full">
          <p class="w-full text-sm leading-tight text-center text-gray-500">
            {{jobTitle}}
          </p>
          <div class="inline-flex items-center justify-center px-2 py-1 bg-green-100 rounded-full">
            <p class="text-xs font-medium leading-none text-center text-green-800">
              {{role}}
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="w-full h-0.5 bg-gray-200"></div>
    <div class="inline-flex items-center justify w-full shadow rounded-lg">
      <div class="flex space-x-3 items-center justify-center flex-1 py-4 rounded-bl-lg">
        <img class="w-5 h-full rounded-lg" src="https://via.placeholder.com/20x20"/>
        <p class="text-sm font-medium leading-tight text-gray-700">Email</p>
      </div>
      <div class="w-px flex-shrink-0 flex-grow-0 self-stretch bg-gray-200"></div>
      <div class="flex space-x-3 items-center justify-center flex-1 py-4 rounded-br-lg">
        <img class="w-5 h-full rounded-lg" src="https://via.placeholder.com/20x20"/>
        <p class="text-sm font-medium leading-tight text-gray-700">Call</p>
      </div>
    </div>
  </div>
</div>